
@model IEnumerable<BanHangOnline.Models.EF.Publisher>
<style>
    li .cateLink_hover:hover {
        color: white;
        background-color: black;
        display: block;
        padding-left: 5px;
        padding-right: 5px;
        font-size: 18px;
        border-radius: 15px
    }
</style>
@if (Model != null && Model.Any())
{
    <h4>Nhà xuất bản</h4>
    <ul>
        <li style="padding-left:70px;font-weight:bold;">@Html.ActionLink("X", "Index", "Product", new { page = 1, searchText = ViewBag.SearchText, sortText = ViewBag.SortText, category = ViewBag.category, author = ViewBag.author }, new { @style = "font-size:16px;padding:0px 16px;color:white;background-color:#28a745;display:inline-block;border-radius:5px;" })</li>
        @foreach (var item in Model)
        {
            if (ViewBag.publisher == item.Id)
            {
                <li style="display: block; background-color: #B10626; border-radius: 15px; padding-left: 5px; padding-right: 5px; margin-bottom: 5px; margin-top: 5px; " class="text-danger">@Html.ActionLink(item.FullName, "Index", "Product", new { page = 1, publisher = item.Id, searchText = ViewBag.SearchText, sortText = ViewBag.SortText, category = ViewBag.category, author = ViewBag.author }, new { @style = "color: #ffffff;font-size:18px;" })</li>
            }
            else
            {
                <li>@Html.ActionLink(item.FullName, "Index", "Product", new { page = 1, publisher = item.Id, searchText = ViewBag.SearchText, sortText = ViewBag.SortText, category = ViewBag.category, author = ViewBag.author }, new { @class = "cateLink_hover", @style = "font-size:16px;" })</li>
            }

        }

    </ul>
}

