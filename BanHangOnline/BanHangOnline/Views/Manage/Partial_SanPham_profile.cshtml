@model IEnumerable<BanHangOnline.Models.EF.OrderDetail>
@if (Model != null && Model.Any())
{
    int i = 1;
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.Product.Title</td>
                    <td>@BanHangOnline.Common.Common.FormatNumber(@item.Price, 0) Đ</td>
                    <td>@item.Quantity</td>
                    <td>@BanHangOnline.Common.Common.FormatNumber((item.Price * item.Quantity), 0) Đ</td>
                </tr>
                i++;
            }
        </tbody>
    </table>
    <a href="/manage/ListOrder" class="btn btn-danger">Quay lại</a>
}
