
@{
    ViewBag.Title = "Thanh toán";
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/Content/assets/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Checkout</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <span>Checkout</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        @if (ViewBag.CheckCart != null)
        {
            <div class="checkout__form">
                <h2>Thông tin thanh toán</h2>
                <hr />
                <form action="#">
                    <div class="row">
                        <div class="col-lg-4 col-md-6">
                            @*<div class="checkout__order">
                                <h4>Giỏ Hàng</h4>
                                <div class="checkout__order__products">Products <span>Total</span></div>
                                <ul>
                                    <li>Vegetable’s Package <span>$75.99</span></li>
                                    <li>Fresh Vegetable <span>$151.99</span></li>
                                    <li>Organic Bananas <span>$53.99</span></li>
                                </ul>

                                <div class="checkout__order__total">Total <span>$750.99</span></div>
                                <button type="submit" class="site-btn">PLACE ORDER</button>
                            </div>*@
                            @Html.Action("Partial_Item_Thanhtoan", "ShoppingCart")
                        </div>
                        <div class="col-lg-8 col-md-6">

                            <div class="@*row*@">
                                <div class="@*col-lg-6*@">
                                    <div class="checkout__input ">
                                        <label>Họ tên:<span>*</span></label>
                                        <input type="text" name="CustomerName" class="form-control" autocomplete="off">
                                    </div>
                                </div>
                                @*<div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Last Name<span>*</span></p>
                                        <input type="text">
                                    </div>
                                </div>*@
                            </div>
                            <div class="checkout__input">
                                <label>Số điện thoại:<span>*</span></label>
                                <input type="text" name="Phone" class="form-control" autocomplete="off">
                            </div>
                            <div class="checkout__input">
                                <label>Địa chỉ:<span>*</span></label>
                                <input type="text" name="Address" class="form-control" autocomplete="off">
                            </div>
                            <div class="checkout__input">
                                <label>Email:<span>*</span></label>
                                <input type="text" name="Email" class="form-control" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-3">
                                        <label>Hình thức thành toán:</label>
                                    </div>
                                    <div class="col-6">
                                        <select class="form-control" name="Payment">
                                            <option value="1" selected>COD</option>
                                            <option value="2">Chuyển khoản</option>
                                        </select>
                                    </div>
                                </div>


                            </div>
                            <a style="color:white;float:right;" class=" site-btn btn ">Đặt hàng</a>

                        </div>

                    </div>
                </form>
            </div>
        }
        else
            {
            <div class="row">
                <p style="font-size:30px;">Bạn chưa mua sản phẩm nào. Mời bạn quay lại trang <a href="/Product">Sản phẩm</a> để mua hàng !!!</p>
            </div>
            }
    </div>
</section>
