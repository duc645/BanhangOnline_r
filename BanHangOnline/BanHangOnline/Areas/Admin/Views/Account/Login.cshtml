@model BanHangOnline.Models.LoginViewModel
@{
    ViewBag.Title = "Đăng nhập admin";
    //Layout = "~/Areas/Admin/Views/Shared_LayoutLogin.cshtml";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";

}

<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
    @*<form class="login100-form validate-form">
        </form>*@
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login100-form validate-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" });
        <span style="font-family: 'Material-Design-Iconic-Font';" class="login100-form-title p-b-49">
            Đăng Nhập admin
        </span>

        <div class="wrap-input100 validate-input m-b-15" data-validate="Username is reauired">
            <span class="label-input100">Tài khoản</span>
            @Html.TextBoxFor(x => x.UserName, new { @class = "input100", @placeholder = "Tài khoản" })
            @*<input class="input100" type="text" name="username" placeholder="Type your username">*@
            <span class="focus-input100" data-symbol="&#xf206;"></span>
        </div>

        <div class="wrap-input100 validate-input m-b-15" data-validate="Password is required">
            <span class="label-input100">Password</span>
            @Html.PasswordFor(x => x.Password, new { @class = "input100", @placeholder = "Mật khẩu" })
            @*<input class="input100" type="password" name="pass" placeholder="Type your password">*@
            <span class="focus-input100" data-symbol="&#xf190;"></span>
        </div>

        <div class="text-right p-t-8 p-b-31">
            <a href="#">
                Forgot password?
            </a>
        </div>

        <div class="container-login100-form-btn">
            <div class="wrap-login100-form-btn">
                <div class="login100-form-bgbtn"></div>
                <button type="submit" class="login100-form-btn">
                    Đăng nhập
                </button>
            </div>
        </div>

        <hr />
        <br />
        <div class="row">
            <div class="col-8">
                <div class="icheck-primary">
                    @*<input type="checkbox" id="remember">*@
                    @Html.CheckBoxFor(x => x.RememberMe)
                    <label for="remember">
                        Nhớ tôi?
                    </label>
                </div>
            </div>
            <!-- /.col -->
            @*<div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <a class="login100-form-btn">
                                Đăng ký
                            </a>
                        </div>
                    </div>
                </div>*@
            <!-- /.col -->
        </div>

        @*<div class="txt1 text-center p-t-54 p-b-20">
                <span>
                    Or Sign Up Using
                </span>
            </div>

            <div class="flex-c-m">
                <a href="#" class="login100-social-item bg1">
                    <i class="fa fa-facebook"></i>
                </a>

                <a href="#" class="login100-social-item bg2">
                    <i class="fa fa-twitter"></i>
                </a>

                <a href="#" class="login100-social-item bg3">
                    <i class="fa fa-google"></i>
                </a>
            </div>

            <div class="flex-col-c p-t-155">
                <span class="txt1 p-b-17">
                    Or Sign Up Using
                </span>

                <a href="#" class="txt2">
                    Sign Up
                </a>
            </div>*@
    }
</div>

